rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Applications collection - Allow public write for new applications
    match /applications/{applicationId} {
      // Allow anyone to create new applications
      allow create: if true;
      
      // Only authenticated admins can read, update, or delete
      allow read, update, delete: if request.auth != null;
    }
    
    // Ratings collection - Allow public write for student feedback
    match /ratings/{ratingId} {
      // Allow anyone to create new ratings
      allow create: if true;
      
      // Only authenticated admins can read ratings
      allow read: if request.auth != null;
      
      // No one can update or delete ratings
      allow update, delete: if false;
    }
    
    // Admin users collection - Authenticated users can access their own data
    match /users/{userId} {
      // Allow authenticated users to read any user document
      allow read: if request.auth != null;
      
      // Allow users to write their own document
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow reading user collection for admin authentication
    match /admins/{adminId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == adminId;
    }
  }
}
